{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@graphql/*": [
        "graphql/*"
      ],
      "@interfaces/*": [
        "graphql/interfaces/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@authPages/*": [
        "pages/auth/*"
      ],
      "@route/*": [
        "route/*"
      ],
      "@routeComponents/*": [
        "route/components/*"
      ],
      "@theme/*": [
        "theme/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "public",
    "node_modules"
  ]
}
